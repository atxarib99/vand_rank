<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My current GPA is"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/curGPA"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and my desired rank is"
        android:id="@+id/textView2"
        android:layout_marginRight="4000dp"
        android:layout_below="@+id/curGPA"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/curGPA"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/desRank"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/curGPA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have been in school for"
        android:id="@+id/textView3"
        android:layout_below="@+id/desRank"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/semDone"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignStart="@+id/desRank" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="semester and would like to acheive this GPA in"
        android:id="@+id/textView4"
        android:layout_below="@+id/semDone"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/semLeft"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/semDone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/btn"
        android:layout_below="@+id/semLeft"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:longClickable="false"
        android:layout_alignEnd="@+id/semLeft"
        android:clickable="false"
        android:onClick="onClick" />

</RelativeLayout>
